// calcularTotalAPagar :: Pedido[] -> Number
function calcularTotalAPagar (pedidos) {

  // aplicarPago :: Pedido -> Number
  const aplicarPago =

    // multiplicado precio y cantidad :: Pedido -> Number
    x => x.precio * x.cantidad

    // agregar impuesto :: Number -> Number
    |> x => 1.21 * x

    // agregar propina :: Number -> Number
    |>  x => 1.1 * x

  // sum :: Pedidos[] -> Number
  const sum = (acc, elem) => acc + aplicarPago(elem)

  return pedidos.reduce(sum, 0)
}

